package com.StepDefination;

import org.openqa.selenium.WebDriver;

import com.Utility.Log;

import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;

public class OrangeHRMApplicationUserDefinedMethods {
	
	WebDriver driver;
	String applicationUrlAddress=" http://127.0.0.1/orangehrm-4.2.0.1/symfony/web/index.php/dashboard";
	
	
	@Given("User should open Broswer in the System")
	public void user_should_open_broswer_in_the_system() {
	  System.setProperty("webdriver.chrome.driver", "./BrowserDriveFiles/chromedriver.exe"); 
	  Log.info("****Chrome Broswer Lanched Sccessfully*****");
	  
	}

	@When("User enters OrangeHrm Application Url Address")
	public void user_enters_orange_hrm_application_url_address() {
	   
		driver.get(applicationUrlAddress);
		Log.info("*****Successfully Provided OrangeHRM Application Url address on the Broswer****** ");
		driver.manage().window().maximize();
	}

	@Then("User should  close the OrangeHRM Application alone with the broswer")
	public void user_should_close_the_orange_hrm_application_alone_with_the_broswer() {
		
		driver.quit();
		Log.info("******OrangeHRM Application along with the Broswer Closed Successfully");
	    
	}
	

}
